$accentColor = #93adff
$textColor = #2c3e50
$borderColor = #f5f5f5
$codeBgColor = #09163c

.inp-btn {
  border: none;
  cursor: pointer;
  border: 1px solid #1996f9;
  color: #333;
  transition: color 0.4s, background 0.4s;

  &:focus {
    outline: none;
  }

  &.on {
    background: #1996f9;
    color: #fff;
  }
}

.demo {
  color: #1996f5;
  font-weight: normal;

  &-button {
    margin: 0 16px 16px 0;
    vertical-align: middle;
  }

  &-badge {
    margin-right: 20px;
  }

  &-link {
    width: 42px;
    height: 42px;
    border-radius: 4px;
    background: #eee;
    display: inline-block;
  }

  &-checkbox {
    display: block;
    height: 20px;
    width: 50%;
    margin: 0;
  }

  &-page,
  &-select {
    display: inline-block;
    vertical-align: middle;
  }
}

.demo-grid {
  &-first {
    margin-top: 24px !important;
  }

  &-second {
    margin-top: 16px !important;
  }

  &-row {
    margin-bottom: 8px;
    background-image: linear-gradient(90deg,#f5f5f5 4.16666667%,transparent 0,transparent 8.33333333%,#f5f5f5 0,#f5f5f5 12.5%,transparent 0,transparent 16.66666667%,#f5f5f5 0,#f5f5f5 20.83333333%,transparent 0,transparent 25%,#f5f5f5 0,#f5f5f5 29.16666667%,transparent 0,transparent 33.33333333%,#f5f5f5 0,#f5f5f5 37.5%,transparent 0,transparent 41.66666667%,#f5f5f5 0,#f5f5f5 45.83333333%,transparent 0,transparent 50%,#f5f5f5 0,#f5f5f5 54.16666667%,transparent 0,transparent 58.33333333%,#f5f5f5 0,#f5f5f5 62.5%,transparent 0,transparent 66.66666667%,#f5f5f5 0,#f5f5f5 70.83333333%,transparent 0,transparent 75%,#f5f5f5 0,#f5f5f5 79.16666667%,transparent 0,transparent 83.33333333%,#f5f5f5 0,#f5f5f5 87.5%,transparent 0,transparent 91.66666667%,#f5f5f5 0,#f5f5f5 95.83333333%,transparent 0);
  }

  &-col {
    color: #333;

    &:nth-of-type(odd) {
      color: #fff;
      background: rgba(25, 150, 249, 0.5);
    }
  }

  &-text {
    padding: 30px 0;
    text-align: center;
    font-size: 30px;
    line-height: 1;
  }
}

.ghost {
  background: rgb(190, 200, 200);
  padding: 26px 16px 16px;
  margin: 16px 0
}

.message-button {
  margin: 0 0 0 8px;
  vertical-align: middle;
}

.notice-sel {
  height: 32px;
}

.notification-button {
  margin: 0 0 0 8px;
  vertical-align: middle;
}

.modal {
  &-footer {
    background: #d8d8d8;
    text-align: center;
  }

  &-title {
    background: #d8d8d8;
    padding: 10px 24px;
  }

  &-close {
    top: 13px;
  }

  &-mask {
    background: rgba(255, 0, 0, 0.4);
  }
}

.demo-popover {
  overflow: auto;
  margin: 16px 0;

  &-ul {
    margin: 0;
    padding: 0;

    & li {
      margin: 0;
      padding: 0;
      list-style: none;
    }
  }

  &-core {
    margin: 0 8px 8px 0;
  }

  &-button {
    width: 110px;
  }

  &-top {
    margin-left: 110px;
    white-space: nowrap;
  }

  &-left {
    width: 70px;
    float: left;
  }

  &-right {
    width: 110px;
    margin-left: 465px;
  }

  &-bottom {
    margin-left: 110px;
    clear: both;
    white-space: nowrap;
  }
}

.input-more-text {
  display: inline-block;
  vertical-align: middle;
}

.input-more {
  padding: 0;
  margin: 0 0 0 8px;
  height: 12px;
  display: inline-block;
  vertical-align: middle;
}

.panel {
  background: rgba(250, 173, 20, 0.1);
  border: 1px solid rgba(250, 173, 20, 0.4);
  padding: 16px;

  & h3 {
    margin: 0;
    line-height: 1;
    padding-bottom: 8px;
  }

  & p {
    margin: 0;
    line-height: 1.5;
  }
}

.w-tag {
  margin-bottom: 8px;

  &-box {
    display: flex;
    flex-flow: wrap;
  }
}

.list-leave-active {
  transition: all 0.3s;
}

.list-leave-to {
  opacity: 0;
  width: 0;
  padding: 0;
  margin: 0;
  overflow: hidden;
  border-raduis: 0;
}
